<%- req.flash('message') %>
<div ng-controller="DashboardCtrl">
  <h1>Dashboard</h1>
  <h3>Hello <%- user.email %></h3>
  <a href="/logout">Logout</a>
  <h1>Post</h1>
  <div ng-controller='PostCtrl'>
    <form ng-submit="createPost('load_posts')">
      <input ng-model="formData.title" type="text" name="title">
      <textarea ng-model="formData.body" name="body"></textarea>
      <input type="submit" value="submit">
    </form>
    <md-progress-circular ng-show="load" md-mode="indeterminate"></md-progress-circular>
    <ul>
      <li ng-repeat="post in posts">	
	<post-item post="post" > </post-item>
      </li>
    </ul>
  </div>
</div>

